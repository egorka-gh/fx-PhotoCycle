<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">

	<fx:Script>
		<![CDATA[
			import com.photodispatcher.service.glue.GlueMessageItem;
			
			[Bindable]
			protected var item:GlueMessageItem;
			[Bindable]
			protected var itemColor:uint=0xffffff;
			
			override public function set data(value:Object):void{
				// TODO Auto Generated method stub
				super.data = value;
				item= value as GlueMessageItem;
				
				if (item.key.toLocaleLowerCase()=='color'){
					itemColor=uint(item.value.replace('#','0x') );
					if(itemColor==0) itemColor=0xffffff;
				}else{
					itemColor=0xffffff;
				}
			}
			
		]]>
	</fx:Script>

	<s:HGroup gap="3">
		<s:Label text="{item.key}"/>
		<s:TextInput text="{item.value}" contentBackgroundAlpha="1" contentBackgroundColor="{itemColor}"/>
	</s:HGroup>
	
</s:ItemRenderer>
