<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="false">
	<fx:Script>
		<![CDATA[
			import com.photodispatcher.provider.ftp.FtpService;

			[Bindable]
			private var service:FtpService;
			
			override public function get data():Object{
				return super.data;
			}
			
			override public function set data(value:Object):void{
				super.data = value;
				service= value as FtpService;
			}
			
		]]>
	</fx:Script>

	<s:Rect radiusX="3" top="1" left="0" right="0" bottom="1">
		<s:fill>
			<s:SolidColor color="#cccccc"/>
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="0" weight="1"/>
		</s:stroke>
	</s:Rect>

	<s:VGroup id="gContent" gap="5" paddingTop="10" paddingLeft="10" paddingRight="10" paddingBottom="10" width="500">
		<s:HGroup width="100%" gap="7" >
			<s:Label text="{service.source.name}" fontWeight="bold"/>
			<s:Label text="{service.lastError}" width="100%" textAlign="right" color="#ff0000" maxDisplayedLines="1"/>
			<s:Label text="Скорость: {service.speed}Kb/s"/>
		</s:HGroup>
		<s:HGroup gap="5" verticalAlign="middle">
			<s:Image source="{service.isStarted?'assets/ftp.png':'assets/pause.png'}" width="24" height="24"/>
			<s:Label text="Заказов в очереди: {service.queueLenth}, в обработке: {service.processingLenth}." />
			<s:Label text="Подключений: {service.connectionsLenth}"/>
		</s:HGroup>
		<s:Label text="Загрузка: {service.loadProgressOrders}" maxDisplayedLines="2" width="100%"/>
		<mx:ProgressBar mode="event" source="{service}" labelPlacement="top" width="100%"
						fontWeight="normal" labelWidth="{gContent.width-20}"
						label="Загружено %1 файлов из %2"/>
	</s:VGroup>
	
</s:ItemRenderer>
